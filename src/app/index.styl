@import '~nib/index'

global-reset()

$easing-quick = cubic-bezier(0.215, 0.61, 0.355, 1)

.image
  position fixed
  top 50px
  left 50px
  width 300px
  height 300px
  background-position 50% 50%
  background-size cover
  background-repeat no-repeat
  border-radius 50%
  background-color red
  opacity 0
  visibility hidden
  transition all $easing-quick 0.24s

  &.expand
    width 100%
    height 100%
    top 0
    left 0
    right 0
    bottom 0
    border-radius 0
    opacity 0.24 !important
    visibility visible

.menu
  position absolute
  display block
  padding 20px
  color black
  background-color gray
  transition background-color 0.12s ease-out, color 0.12s ease-out

  img
    display none

  &:hover
    color white
    background-color black

    .image
      opacity 1
      visibility visible

  &.menu1
    top 120px
    right 60px

  &.menu2
    top 240px
    right 90px
