@import '~nib/index'

global-reset()

#image
  width 300px
  height 300px
  background-position 50% 50%
  background-size contain

.menu
  position absolute
  display block
  padding 20px
  color black
  background-color gray
  transition background-color 0.12s ease-in, color 0.12s ease-in

  img
    display none

  &:hover
    color white
    background-color black

  &.menu1
    top 120px
    right 60px

  &.menu2
    top 240px
    right 90px
